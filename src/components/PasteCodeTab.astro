---
/**
 * Paste SVG code tab panel component
 *
 * Provides a textarea for pasting SVG markup directly.
 *
 * @component
 */
---

<div class="mb-6">
    <label for="svgInput" class="block text-sm font-medium text-gray-700 mb-2">
        Paste SVG Code
    </label>
    <textarea
        id="svgInput"
        placeholder="<svg>...</svg>"
        rows="8"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm transition-all"
        aria-label="Paste SVG code"
    ></textarea>
    <p class="mt-2 text-xs text-gray-500">
        Paste your complete SVG markup here
    </p>
</div>
